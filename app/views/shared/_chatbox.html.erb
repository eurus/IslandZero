<% messages = @chattable.messages.order("id DESC").first(100) %>
<div class="row">
  <div class="col-md-12">
    <div class="panel panel-info panel-main">
      <div class="panel-body">
        <%= form_for @message, remote: true, html: { id: 'chatroom-send-form' } do |f| %>
        <%= f.hidden_field :chattable_type %>
        <%= f.hidden_field :chattable_id %>
        <div class="row">
          <div class="col-md-8">
            <div class="form-group">
              <%= f.text_field :content, class: 'form-control', id: 'input-content' %>
            </div>
          </div>
          <div class="col-md-2">
            <%= f.submit t(:send), class: 'btn btn-default' %>
          </div>
        </div>
        <% end %>
      </div>
      <div class="panel-body" id="chatroom-content">

        <% messages.each do |msg| %>
        <p class="text-primary">
          <small class="text-muted">
            <%= msg.user.nickname %> (#<%= msg.user.id %>)
            <span class="pull-right"><%= msg.created_at %></span>
          </small>
          <br/>
          <%= msg.content %>
        </p>

        <% end %>
      </div>
      <script>
      (new Chatbox($("#chatroom-content"))).subscribe("/chat/<%= @message.chattable_type %>/<%= @message.chattable_id %>");
      Chatbox.setupFormSend($("#chatroom-send-form"));
      </script>
    </div>
  </div>
</div>
