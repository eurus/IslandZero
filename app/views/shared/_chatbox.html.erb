<% messages = @chattable.messages.order("id DESC").first(100) %>
<div class="row">
  <div class="col-md-12">
    <div class="panel panel-info panel-main">
      <div class="panel-body">

        <% messages.each do |msg| %>
        <p>
          <%= msg.content %>
        </p>

        <% end %>
      </div>
    </div>
  </div>
</div>
